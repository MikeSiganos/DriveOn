<resources>
    <!-- Night theme -->
    <style name="Theme.DriveOn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/black_overlay</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/gray_dark</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/white_overlay</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Action bar style -->
        <item name="actionBarStyle">@style/CorrectDarkActionBar</item>
    </style>
    <!-- Dark action bar bug correction -->
    <style name="CorrectDarkActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
    </style>
</resources>